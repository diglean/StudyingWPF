<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button" x:Key="MyStyle">
            <Setter Property="Background" Value="#a6b7d7"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>

        </Style>

        <Style TargetType="Button" x:Key="MyStyle2">
            <Setter Property="Background" Value="#5865F2"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>

        </Style>
    </Window.Resources>

    <Grid>
        <Button Content="Button 1" Style="{StaticResource MyStyle2}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="94" Height="51" Margin="232,0,0,0"/>
        <Button Content="Button 2" Style="{StaticResource MyStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="93" Height="51" Margin="472,0,0,0"/>
    </Grid>
</Window>
